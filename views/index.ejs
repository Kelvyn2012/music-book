<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Music Book</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="../public/styles.css" />
  </head>
  <body>
    <h2>Music Library</h2>
    <form action="/artists" method="post">
      <label for="artistName">Search Artist</label>
      <input type="text" name="artistName" placeholder="e.g Eminem" />
      <button>Search</button>
    </form>
    <div>
      <h2>Songs</h2>
      <%if(content.length === 0){%>
      <h2>Artist Name</h2>
      <% }else{%>
      <h2><%= content[0].artist.name %></h2>
      <% } %> <%content.forEach((contents)=>{%>
      <img src="<%= contents.artist.picture_medium %>" alt="" />

      <ul>
        <li>
          <a href="<%= contents.preview%>"><%= contents.title_short%></a>
        </li>
      </ul>
      <% })%>
    </div>
